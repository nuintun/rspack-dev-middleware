{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "newLine": "lf",
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
