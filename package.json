{
  "name": "rspack-dev-middleware",
  "version": "0.1.3",
  "description": "A koa 2 middleware for rspack development and hot reloading.",
  "type": "module",
  "sideEffects": [
    "esm/client/main.js",
    "cjs/client/main.cjs"
  ],
  "main": "cjs/server/index.cjs",
  "module": "esm/server/index.js",
  "exports": {
    ".": {
      "import": "./esm/server/index.js",
      "require": "./cjs/server/index.cjs"
    },
    "./client": {
      "import": "./esm/client/index.js",
      "require": "./cjs/client/index.cjs"
    }
  },
  "files": [
    "cjs",
    "esm",
    "global.d.ts"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/rspack-dev-middleware.git"
  },
  "keywords": [
    "dev",
    "koa",
    "rspack",
    "server",
    "middleware"
  ],
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/rspack-dev-middleware/issues"
  },
  "homepage": "https://github.com/nuintun/rspack-dev-middleware#readme",
  "scripts": {
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "prepublishOnly": "npm run build",
    "test": "cd tests && node rspack.js",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "build:fix-types": "node tools/fix-types.js",
    "format": "prettier --write . --ignore-path .prettierignore",
    "build": "npm run clean && npm run build:main && npm run format",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:fix-types"
  },
  "dependencies": {
    "@nuintun/ansi": "^0.2.2",
    "@types/koa": "^2.15.0",
    "@types/ws": "^8.5.14",
    "etag": "^1.8.1",
    "memfs": "^4.17.0",
    "range-parser": "^1.2.1",
    "schema-utils": "^4.3.0",
    "supports-color": "^10.0.0",
    "tslib": "^2.8.1",
    "uuid": "^11.0.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-url": "^8.0.2",
    "@rspack/core": "^1.2.2",
    "@rspack/plugin-react-refresh": "^1.0.1",
    "@types/etag": "^1.8.3",
    "@types/node": "^22.13.1",
    "@types/range-parser": "^1.2.7",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "dts-paths": "^1.1.2",
    "koa": "^2.15.3",
    "koa-compress": "^5.1.1",
    "magic-string": "^0.30.17",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-refresh": "^0.16.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.2",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@rspack/core": ">=1.0.7",
    "koa": ">=2.0.0"
  }
}
