{
  "name": "rspack-dev-middleware",
  "version": "0.0.1",
  "description": "A koa 2 middleware for rspack development and hot reloading.",
  "type": "module",
  "sideEffects": [
    "esm/client/main.js",
    "cjs/client/main.cjs"
  ],
  "main": "cjs/server/index.cjs",
  "module": "esm/server/index.js",
  "types": "types/server/index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/server/index.js",
      "require": "./cjs/server/index.cjs",
      "types": "./types/server/index.d.ts"
    },
    "./client": {
      "import": "./esm/client/index.js",
      "require": "./cjs/client/index.cjs",
      "types": "./types/client/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./types/server/index.d.ts"
      ],
      "client": [
        "./types/client/index.d.ts"
      ]
    }
  },
  "files": [
    "cjs",
    "esm",
    "types"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/rspack-dev-middleware.git"
  },
  "keywords": [
    "dev",
    "koa",
    "server",
    "webpack",
    "middleware"
  ],
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/rspack-dev-middleware/issues"
  },
  "homepage": "https://github.com/nuintun/rspack-dev-middleware#readme",
  "scripts": {
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "prepublishOnly": "npm run build",
    "test": "cd tests && node rspack.js",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "format": "prettier --write . --ignore-path .prettierignore",
    "build": "npm run clean && npm run build:main && npm run format",
    "build:main": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir types && node tools/fix-types.js"
  },
  "dependencies": {
    "@nuintun/ansi": "^0.1.0",
    "@types/koa": "^2.15.0",
    "@types/ws": "^8.5.12",
    "etag": "^1.8.1",
    "memfs": "^4.14.0",
    "range-parser": "^1.2.1",
    "schema-utils": "^4.2.0",
    "supports-color": "^9.4.0",
    "tslib": "^2.8.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@rollup/plugin-url": "^8.0.2",
    "@rspack/core": "^1.0.13",
    "@rspack/plugin-react-refresh": "^1.0.0",
    "@types/etag": "^1.8.3",
    "@types/node": "^22.7.5",
    "@types/range-parser": "^1.2.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "koa": "^2.15.3",
    "koa-compress": "^5.1.1",
    "magic-string": "^0.30.12",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-refresh": "^0.14.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@rspack/core": ">=1.0.7",
    "koa": ">=2.0.0"
  }
}
