{
  "name": "rspack-dev-middleware",
  "version": "0.2.2",
  "description": "A koa 2 middleware for rspack development and hot reloading.",
  "type": "module",
  "sideEffects": [
    "esm/client/main.js",
    "cjs/client/main.cjs"
  ],
  "main": "cjs/server/index.cjs",
  "module": "esm/server/index.js",
  "exports": {
    ".": {
      "import": "./esm/server/index.js",
      "require": "./cjs/server/index.cjs",
      "default": "./esm/server/index.js"
    },
    "./client": {
      "import": "./esm/client/index.js",
      "require": "./cjs/client/index.cjs",
      "default": "./esm/client/index.js"
    }
  },
  "files": [
    "cjs",
    "esm",
    "global.d.ts"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuintun/rspack-dev-middleware.git"
  },
  "keywords": [
    "dev",
    "koa",
    "rspack",
    "server",
    "middleware"
  ],
  "author": {
    "name": "nuintun",
    "email": "nuintun@qq.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuintun/rspack-dev-middleware/issues"
  },
  "homepage": "https://github.com/nuintun/rspack-dev-middleware#readme",
  "scripts": {
    "lint": "tsc --noEmit",
    "clean": "node tools/clean.js",
    "prepublishOnly": "pnpm build",
    "test": "cd tests && node rspack.js",
    "build:cjs": "rollup -c tools/rollup.cjs.js",
    "build:esm": "rollup -c tools/rollup.esm.js",
    "build:fix-types": "node tools/fix-types.js",
    "build": "pnpm clean && pnpm build:main && pnpm format",
    "format": "prettier --write . --ignore-path .prettierignore",
    "build:main": "pnpm build:cjs && pnpm build:esm && pnpm build:fix-types"
  },
  "dependencies": {
    "@nuintun/ansi": "^0.3.9",
    "@types/koa": "^3.0.1",
    "@types/ws": "^8.18.1",
    "etag": "^1.8.1",
    "memfs": "^4.51.1",
    "range-parser": "^1.2.1",
    "schema-utils": "^4.3.3",
    "supports-color": "^10.2.2",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@rollup/plugin-url": "^8.0.2",
    "@rspack/core": "^1.6.6",
    "@rspack/plugin-react-refresh": "^1.5.3",
    "@types/etag": "^1.8.4",
    "@types/node": "^24.10.1",
    "@types/range-parser": "^1.2.7",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "dts-paths": "^1.1.15",
    "koa": "^3.1.1",
    "koa-compress": "^5.1.1",
    "prettier": "^3.7.4",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-refresh": "^0.18.0",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@rspack/core": ">=1.0.7",
    "koa": ">=2.0.0"
  }
}
